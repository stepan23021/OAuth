<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainScreen">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/user_photo_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="First Name/ Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName_TW" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/user_photo_image" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="Дата рождения:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob_label"
            app:layout_constraintTop_toBottomOf="@+id/userName_TW" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="dd/mm/yyyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob_text"
            app:layout_constraintTop_toBottomOf="@+id/userName_TW" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginStart="8dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4" app:layout_constraintGuide_percent="0.5"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>